source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem "fog", "~> 1.3.1"	
gem 'rubyzip', :require => 'zip/zip'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
	gem 'sqlite3'
end

group :production do
  gem 'pg', '0.12.2'
end

gem 'jquery-rails'
gem "carrierwave"
gem "mini_magick", "~> 3.4"
gem 'jbuilder'
